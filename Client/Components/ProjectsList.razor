@using Core

<div class="row"> 
    @if (Projects != null)
    {
        @foreach (var p in Projects)
        {
            <div class="col-12 mb-3"> 
                <div class="card shadow-sm">
                    
                    <div class="card-body d-flex justify-content-between align-items-center">
                        
                        <div class="content">
                            <h5 class="card-title mb-1">Projekt @p.ProjectId - @p.Name</h5>
                            <p class="card-text text-muted mb-2"><small>Dato Oprettet: @p.DateCreated.ToShortDateString()</small></p>
                        </div>

                        <button class="btn btn-outline-primary flex-shrink-0" @onclick="@(() => OnSeeMore?.Invoke(p.ProjectId))">
                            Se mere
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter] public IEnumerable<Project>? Projects { get; set; }
    [Parameter] public Action<int>? OnSeeMore { get; set; }
}