@using Core
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject NavigationManager navManager


<div class="logo-con">
    <div class="m-4">
        <a href="projectpage">
            <img src="Assets/Larsen-logo_2021hvid.png" class="logo-larsen"/>
